{
  "version": 2,
  "functions": {
    "api/index.js": {
      "includeFiles": "../server/**"
    }
  },
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/api/index.js"
    },
    {
      "source": "/uploads/(.*)",
      "destination": "/api/index.js"
    },
    {
      "source": "/(.*)",
      "destination": "/client/index.html"
    }
  ]
}